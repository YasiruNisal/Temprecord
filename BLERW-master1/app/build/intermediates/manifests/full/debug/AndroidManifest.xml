<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ublox.BLE"
    android:versionCode="10"
    android:versionName="2.5.2" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/applogo"
        android:label="TempBLE"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ublox.BLE.activities.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.ublox.BLE.services.BluetoothLeService"
            android:enabled="true" />

        <activity
            android:name="com.ublox.BLE.activities.AboutActivity"
            android:label=""
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ublox.BLE.activities.DevicesActivity"
            android:label=""
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ublox.BLE.activities.DeviceControlActivity"
            android:label=""
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ublox.BLE.activities.Activity_Query"
            android:label=""
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ublox.BLE.activities.Activity_Read"
            android:label=""
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ublox.BLE.activities.Activity_Settings"
            android:label=""
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.ublox.BLE.activities.Activity_Parameter"
            android:label=""
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        />
    </application>

</manifest>