<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent" 
style="?android:attr/buttonBarStyle"
>

	<NumberPicker
		android:id="@+id/numberPicker"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_marginTop="64dp"
		android:layout_centerHorizontal="true"
	/>

	<Button
		android:id="@+id/setBtn"
		style="?android:attr/buttonBarButtonStyle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignBaseline="@+id/CancelButton_NumberPicker"
		android:layout_alignBottom="@+id/CancelButton_NumberPicker"
		android:layout_alignStart="@+id/numberPicker"
		android:layout_marginStart="30dp"
		android:text="Set" />

	<Button
		android:id="@+id/CancelButton_NumberPicker"
		style="?android:attr/buttonBarButtonStyle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"

		android:layout_alignEnd="@+id/numberPicker"
		android:layout_below="@+id/numberPicker"
		android:layout_marginEnd="32dp"

		android:text="Cancel" />


</RelativeLayout>
