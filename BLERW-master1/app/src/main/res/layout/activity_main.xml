<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout" >



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white_color1"
        tools:context=".activities.MainActivity">

        <TextView
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/battery"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="Menu"
            android:gravity="center"
            android:textColor="@color/ublox_blue_color"
            android:textSize="30sp" />

        <com.imangazaliev.circlemenu.CircleMenu
            android:id="@+id/circle_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/circle"
            app:openOnStart="true"
            app:hintsEnabled="true">

            <com.imangazaliev.circlemenu.CircleMenuButton
                android:id="@+id/query"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:colorNormal="#b64382"
                app:colorPressed="#911D5D"
                app:hintText="Query"
                android:scaleType="centerInside"
                android:elevation="30dp"
                app:icon="@drawable/ic_info" />

            <com.imangazaliev.circlemenu.CircleMenuButton
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:colorNormal="#de58da"
                app:colorPressed="#822380"
                app:hintText="Start"
                android:scaleType="centerInside"
                android:elevation="30dp"
                app:icon="@drawable/ic_start" />

            <com.imangazaliev.circlemenu.CircleMenuButton
                android:id="@+id/tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:colorNormal="#8e48c4"
                app:colorPressed="#5C2A84"
                app:hintText="Tag"
                android:scaleType="centerInside"
                android:elevation="30dp"
                app:icon="@drawable/ic_tag" />

            <com.imangazaliev.circlemenu.CircleMenuButton
                android:id="@+id/parameters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:colorNormal="#3f62c6"
                app:colorPressed="#213999"
                app:hintText="Parameters"
                android:scaleType="centerInside"
                android:elevation="30dp"
                app:icon="@drawable/ic_parameters" />


            <com.imangazaliev.circlemenu.CircleMenuButton
                android:id="@+id/devicelist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:colorNormal="#0bb799"
                app:colorPressed="#00755F"
                app:hintText="Device List"
                android:scaleType="centerInside"
                android:elevation="30dp"
                app:icon="@drawable/ic_list" />

            <com.imangazaliev.circlemenu.CircleMenuButton
                android:id="@+id/open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:colorNormal="#19c26a"
                app:colorPressed="#01893E"
                app:hintText="Open"
                android:scaleType="centerInside"
                android:elevation="30dp"
                app:icon="@drawable/ic_open" />

            <com.imangazaliev.circlemenu.CircleMenuButton
                android:id="@+id/help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:colorNormal="#a6d16b"
                app:colorPressed="#81B239"
                app:hintText="Help"
                android:scaleType="centerInside"
                android:elevation="30dp"
                app:icon="@drawable/ic_help" />


            <com.imangazaliev.circlemenu.CircleMenuButton
                android:id="@+id/find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:colorNormal="#f7e065"
                app:colorPressed="#E0C514"
                app:hintText="Find"
                android:scaleType="centerInside"
                android:elevation="30dp"
                app:icon="@drawable/ic_search" />

            <com.imangazaliev.circlemenu.CircleMenuButton
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:colorNormal="#faaf54"
                app:colorPressed="#DD821A"
                app:hintText="Settings"
                android:scaleType="centerInside"
                android:elevation="30dp"
                app:icon="@drawable/ic_settings" />

            <com.imangazaliev.circlemenu.CircleMenuButton
                android:id="@+id/read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:colorNormal="#f7946b"
                app:colorPressed="#E85C20"
                app:hintText="Read"
                android:scaleType="centerInside"
                android:elevation="30dp"
                app:icon="@drawable/ic_read" />

            <com.imangazaliev.circlemenu.CircleMenuButton
                android:id="@+id/reuse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:colorNormal="#f4675e"
                app:colorPressed="#D33830"
                app:hintText="Reuse"
                android:scaleType="centerInside"
                android:elevation="30dp"
                app:icon="@drawable/ic_reuse" />

            <com.imangazaliev.circlemenu.CircleMenuButton
                android:id="@+id/stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:colorNormal="#dc4756"
                app:colorPressed="#CE2135"
                app:hintText="Stop"
                android:scaleType="centerInside"
                android:elevation="30dp"
                app:icon="@drawable/ic_stop" />

        </com.imangazaliev.circlemenu.CircleMenu>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/top_layout">

        <ImageView
            android:id="@+id/ivInstruction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"

            android:clickable="false"
            android:paddingBottom="38dp"
            android:scaleType="fitCenter"
            android:src="@drawable/help2" />

    </RelativeLayout>

</FrameLayout>
